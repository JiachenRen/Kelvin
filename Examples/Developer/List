def l1 = {1, 2, 3, 4, 5}

# Append
def l2 = (l1 ++ {6, 7, 8, 9, 10})
assert l2 == map(1...10) {$1 + 1}

# Map
def l3 = (l2 | $0 + $1)
assert l3 == map(l2) {$0 + $1}

# Filter
def l4 = (l1 |? $0 % 2 == 0)

# Sort
def l5 = (l1 >? $0 > $1)

# Reduce
n := (l2 ~ $0 + $1 ^ 2)

# Remove
l1 := (l1 rm 3)

# Subscript by range
l6 := l1[1,3]
assert l6 == {2, 3}

# Reverse
print(l1)
assert reverse(l1) == {5, 3, 2, 1}

# Produces "gip a ma I"
reverse("I am a pig" as @list) ~ $0 & $1
