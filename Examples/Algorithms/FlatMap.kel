def flatMap(l) {
    tmp := [];

    for (element: l) {
        if (element is @vector) {
            tmp := tmp ++ flatMap(element);
            continue;
        };
        tmp := tmp ++ element;
    };

    return tmp
}

original := [1, [1, [1, 2, 3], 2], [3, 4], 4, 5]
flat := flatMap(original)
println "original: " & original
println "flat mapped: " & flat
flat === [1, 1, 1, 2, 3, 2, 3, 4, 4, 5]
