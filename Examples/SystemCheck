def examples_dir = "/Users/jiachenren/Library/Mobile Documents/com~apple~CloudDocs/Documents/Developer/Kelvin/Examples/"

def start_time = time()
def files = {"Misc", "Tests", "Probability", "Calculus", "Conditionals", "Randomization", "DateTime", "Subscript", "Loops", "String", "Trigonometry", "ErrorHandling", "Statistics", "Vector", "Matrix", "Factorization", "List", "Multiline", "TrailingClosure"}
